---
/**
 * Transform Personal Training - Online Training Page
 * 
 * Showcases virtual training services with Trainerize app integration
 * Premium design matching the live site aesthetic
 */

import Button from '../components/ui/Button.astro';
import FormInput from '../components/ui/FormInput.astro';
import FormTextarea from '../components/ui/FormTextarea.astro';
import Navigation from '../components/Navigation.astro';
import PopupForm from '../components/PopupForm.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Online Personal Training & Fitness Coaching | Transform";
const pageDescription = "Get customized online fitness training from anywhere. App-based workouts, nutrition plans, and daily check-ins with certified trainers. Start your transformation today!";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription}>
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Montserrat:wght@600;700;800&display=swap" rel="stylesheet">
  
  <!-- Design System Styles -->
  <link rel="stylesheet" href="/styles/design-tokens.css">
  <link rel="stylesheet" href="/styles/components.css">
</head>

<body>
  <!-- ===== NAVIGATION ===== -->
  <Navigation currentPath="/online-training" />
  
  <!-- ===== HERO SECTION ===== -->
  <section class="online-hero">
    <div class="online-hero__content container">
      <span class="online-hero__badge">Virtual Training Program</span>
      <h1 class="online-hero__title">ONLINE PERSONAL TRAINING</h1>
      <p class="online-hero__subtitle">
        Using your smartphone, smartwatch and the latest in fitness technology you can receive 
        customized online training tailored to your goals from anywhere and at any time!
      </p>
    </div>
  </section>

  <!-- ===== REACH YOUR GOALS FROM ANYWHERE ===== -->
  <section class="feature-section feature-section--white">
    <div class="container">
      <div class="feature-grid feature-grid--reversed">
        <div class="feature-content">
          <h2 class="feature-title">REACH YOUR GOALS<br>FROM ANYWHERE</h2>
          <p class="feature-description">
            A customized fitness program that doesn't need a gym membership ‚Äì 
            But just as useable at the gym
          </p>
          <ul class="feature-list">
            <li>
              <span class="feature-list__icon">üì±</span>
              Access workouts anytime on your phone
            </li>
            <li>
              <span class="feature-list__icon">üè†</span>
              Train at home, the gym, or on the go
            </li>
            <li>
              <span class="feature-list__icon">üìä</span>
              Track your progress in real-time
            </li>
          </ul>
        </div>
        <div class="feature-image">
          <div class="phone-mockup">
            <img 
              src="/images/trainerize-features-training-sm-and-up-1.webp" 
              alt="Trainerize Training App showing workout interface" 
              width="1082"
              height="589"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== ONE SIZE DOES NOT FIT ALL ===== -->
  <section class="highlight-section">
    <div class="container">
      <div class="highlight-content">
        <h2 class="highlight-title">ONE SIZE DOES NOT FIT ALL</h2>
        <p class="highlight-text">
          Your targets are just that ‚Äì <strong>YOURS</strong>. They can be viewed and set by you 
          with help from your trainer. Every program is customized to your specific goals, 
          fitness level, and schedule.
        </p>
      </div>
    </div>
  </section>

  <!-- ===== NUTRITION PLANS ===== -->
  <section class="feature-section feature-section--light">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title section-title--accent">NUTRITION PLANS</h2>
        <p class="section-subtitle">
          Meal plans prescribed by your trainer to meet your consumption goals all in one place ‚Äì 
          Device integration lets you keep track of where you're at and lets you know just how far 
          away until you make that breakthrough!
        </p>
      </div>
      
      <div class="nutrition-row">
        <div class="nutrition-item">
          <img 
            src="/images/mask-group-3.webp" 
            alt="Healthy meal bowl" 
            class="nutrition-food-image"
            width="430"
            height="452"
            loading="lazy"
          />
        </div>
        <div class="nutrition-item nutrition-item--app">
          <div class="phone-mockup phone-mockup--nutrition-app">
            <img 
              src="/images/trainerize-features-nutrition-tracking.webp" 
              alt="Nutrition tracking interface showing macros and calories" 
              width="392"
              height="448"
              loading="lazy"
            />
          </div>
        </div>
        <div class="nutrition-item">
          <img 
            src="/images/mask-group-4.webp" 
            alt="Healthy food preparation" 
            class="nutrition-food-image"
            width="438"
            height="450"
            loading="lazy"
          />
        </div>
      </div>

      <div class="cta-centered">
        <a href="#consultation" class="btn-cta btn-cta--large">
          Book a Breakthrough Call
          <span class="btn-cta__value">Valued at $500!</span>
        </a>
      </div>
    </div>
  </section>

  <!-- ===== DON'T FALL BEHIND ===== -->
  <section class="feature-section feature-section--white">
    <div class="container">
      <div class="feature-grid">
        <div class="feature-image">
          <div class="phone-mockup phone-mockup--messages">
            <img 
              src="/images/trainerize-features-message-clients.webp" 
              alt="Coach messaging interface for daily check-ins" 
              width="719"
              height="476"
              loading="lazy"
            />
          </div>
        </div>
        <div class="feature-content">
          <span class="feature-badge">Daily Support</span>
          <h2 class="feature-title">DON'T FALL BEHIND</h2>
          <p class="feature-description">
            Meal plans prescribed by your trainer to meet your consumption goals all in one place ‚Äì 
            Device integration lets you keep track of where you're at and lets you know just how far 
            away until you make that breakthrough!
          </p>
          
          <div class="coach-support-card">
            <div class="coach-support-card__icon">üí¨</div>
            <div class="coach-support-card__content">
              <h3>Coaches Have Your Back</h3>
              <p>Receive daily check-ins and motivational messages from your own personal trainer</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== GUARANTEED RESULTS ===== -->
  <section class="results-section">
    <div class="container">
      <div class="results-content">
        <h2 class="results-title">GUARANTEED RESULTS!</h2>
        <p class="results-description">
          Many just like you have struggled to achieve their fitness goals however you are the one to 
          reach the first step to your breakthrough ‚Äì join the others who have found the boost they 
          needed to <strong>TRANSFORM THEIR BODIES AND LIVES</strong>
        </p>
        <div class="results-stats">
          <div class="stat">
            <span class="stat__number">500+</span>
            <span class="stat__label">Clients Transformed</span>
          </div>
          <div class="stat">
            <span class="stat__number">10+</span>
            <span class="stat__label">Years Experience</span>
          </div>
          <div class="stat">
            <span class="stat__number">5‚òÖ</span>
            <span class="stat__label">Average Rating</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== ALSO OFFERING: STUDIO TRAINING ===== -->
  <section class="alt-service-section">
    <div class="container">
      <div class="alt-service-card">
        <div class="alt-service-content">
          <span class="alt-service-label">Also Offering</span>
          <h3 class="alt-service-title">In-Studio Training</h3>
          <p class="alt-service-description">
            Prefer face-to-face training? Visit our private studio in Lakeview, Chicago 
            for personalized 30-minute sessions with our expert trainers.
          </p>
          <a href="/studio-services" class="btn-outline-white">
            Start For Free ‚Üí
          </a>
        </div>
        <div class="alt-service-badge">
          <span>Try Us Out For Free</span>
          <span>On Your First Visit!</span>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== CONSULTATION FORM ===== -->
  <section id="consultation" class="consultation-section">
    <div class="consultation-overlay"></div>
    <div class="container consultation-container">
      <div class="consultation-wrapper">
        <div class="consultation-header">
          <h2>Request a Complimentary Consultation</h2>
          <p>Take the first step towards your fitness goals. We'll respond within 24 hours.</p>
        </div>
        
        <form class="consultation-form">
          <FormInput
            label="Full Name"
            name="name"
            type="text"
            placeholder="John Doe"
            required={true}
          />
          
          <FormInput
            label="Email Address"
            name="email"
            type="email"
            placeholder="john@example.com"
            required={true}
          />
          
          <FormInput
            label="Phone Number"
            name="phone"
            type="tel"
            placeholder="(312) 555-0123"
            required={true}
          />
          

          
          <div class="form-consent">
            <label>
              <input type="checkbox" required>
              <span>
                I consent to be contacted by Transform Personal Training regarding my inquiry.
              </span>
            </label>
          </div>
          
          <Button variant="primary" type="submit" class="form-submit-btn">
            Request Free Consultation
          </Button>
          
          <p class="form-note">
            We'll respond within 24 hours to schedule your free session.
          </p>
        </form>
      </div>
    </div>
  </section>

  <!-- ===== FOOTER ===== -->
  <Footer />
  
  <!-- ===== POPUP FORM ===== -->
  <PopupForm />
</body>
</html>

<style>
  /* ===== HERO SECTION ===== */
  .online-hero {
    background: linear-gradient(135deg, #0284c7 0%, #1e293b 100%);
    padding: var(--space-16) 0;
    position: relative;
    overflow: hidden;
  }
  
  .online-hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 60%;
    height: 200%;
    background: radial-gradient(ellipse, rgba(255,255,255,0.05) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .online-hero__content {
    text-align: center;
    position: relative;
    z-index: 1;
  }
  
  .online-hero__badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .online-hero__title {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    color: var(--color-accent-500);
    margin-bottom: 1.5rem;
    line-height: 1.1;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }
  
  .online-hero__subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.95);
    max-width: 700px;
    margin: 0 auto 2.5rem;
    line-height: 1.7;
  }
  
  /* ===== CTA BUTTON ===== */
  .btn-cta {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    background: var(--color-accent-500);
    color: white;
    padding: 1.25rem 3rem;
    border-radius: 12px;
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    box-shadow: 0 8px 30px rgba(249, 115, 22, 0.4);
  }
  
  .btn-cta:hover {
    background: var(--color-accent-600);
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(249, 115, 22, 0.5);
  }
  
  .btn-cta__value {
    font-size: 0.75rem;
    font-weight: 500;
    opacity: 0.9;
    text-transform: none;
    letter-spacing: 0;
  }
  
  .btn-cta--large {
    padding: 1.5rem 4rem;
    font-size: 1.25rem;
  }
  
  /* ===== FEATURE SECTIONS ===== */
  .feature-section {
    padding: 5rem 0;
  }
  
  .feature-section--white {
    background: white;
  }
  
  .feature-section--light {
    background: var(--color-black-50);
  }
  
  .feature-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  @media (min-width: 768px) {
    .feature-grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
    
    .feature-grid--reversed .feature-content {
      order: -1;
    }
  }
  
  .feature-content {
    padding: 1rem 0;
  }
  
  .feature-badge {
    display: inline-block;
    background: var(--color-primary-100);
    color: var(--color-primary-700);
    padding: 0.375rem 1rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
  }
  
  .feature-title {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    color: var(--color-accent-500);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }
  
  .feature-description {
    font-size: 1.125rem;
    color: var(--color-black-600);
    line-height: 1.8;
    margin-bottom: 2rem;
  }
  
  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .feature-list li {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0;
    color: var(--color-black-700);
    font-size: 1rem;
    border-bottom: 1px solid var(--color-black-100);
  }
  
  .feature-list li:last-child {
    border-bottom: none;
  }
  
  .feature-list__icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }
  
  /* ===== PHONE MOCKUP ===== */
  .feature-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .phone-mockup {
    position: relative;
    background: linear-gradient(145deg, #f8fafc, #e2e8f0);
    padding: 1rem;
    border-radius: 2rem;
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.8),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    max-width: 500px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .phone-mockup:hover {
    transform: translateY(-8px);
    box-shadow: 
      0 35px 60px -15px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.8),
      0 0 0 1px rgba(0, 0, 0, 0.05);
  }
  
  .phone-mockup img {
    border-radius: 1.5rem;
    width: 100%;
    height: auto;
    display: block;
  }
  
  .phone-mockup--nutrition-app {
    max-width: 320px;
    padding: 0.75rem;
  }
  
  .phone-mockup--messages {
    max-width: 480px;
  }
  
  /* ===== HIGHLIGHT SECTION ===== */
  .highlight-section {
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
    padding: 4rem 0;
  }
  
  .highlight-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .highlight-title {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    color: white;
    margin-bottom: 1.5rem;
  }
  
  .highlight-text {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.95);
    line-height: 1.8;
  }
  
  .highlight-text strong {
    color: var(--color-accent-400);
  }
  
  /* ===== NUTRITION ROW ===== */
  .nutrition-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin: 3rem 0;
    align-items: center;
  }
  
  @media (min-width: 768px) {
    .nutrition-row {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 2rem;
    }
  }
  
  .nutrition-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .nutrition-item--app {
    order: -1;
  }
  
  @media (min-width: 768px) {
    .nutrition-item--app {
      order: 0;
    }
  }
  
  .nutrition-food-image {
    width: 100%;
    max-width: 300px;
    height: auto;
    border-radius: 1.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    object-fit: cover;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .nutrition-food-image:hover {
    transform: translateY(-8px);
    box-shadow: 0 30px 50px rgba(0, 0, 0, 0.18);
  }
  
  .cta-centered {
    text-align: center;
    margin-top: 3rem;
  }
  
  /* ===== COACH SUPPORT CARD ===== */
  .coach-support-card {
    display: flex;
    gap: 1.25rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, var(--color-primary-50), var(--color-primary-100));
    border-radius: 1rem;
    border-left: 4px solid var(--color-primary-500);
    margin-top: 1.5rem;
  }
  
  .coach-support-card__icon {
    font-size: 2rem;
    flex-shrink: 0;
  }
  
  .coach-support-card__content h3 {
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-black-900);
    margin-bottom: 0.5rem;
  }
  
  .coach-support-card__content p {
    color: var(--color-black-600);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0;
  }
  
  /* ===== RESULTS SECTION ===== */
  .results-section {
    background: linear-gradient(135deg, #1e293b, #0f172a);
    padding: 5rem 0;
    position: relative;
    overflow: hidden;
  }
  
  .results-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
  }
  
  .results-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }
  
  .results-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    color: var(--color-accent-500);
    margin-bottom: 1.5rem;
  }
  
  .results-description {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.8;
    max-width: 800px;
    margin: 0 auto 3rem;
  }
  
  .results-description strong {
    color: var(--color-accent-400);
  }
  
  .results-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat__number {
    display: block;
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    margin-bottom: 0.5rem;
  }
  
  .stat__label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  /* ===== ALT SERVICE SECTION ===== */
  .alt-service-section {
    background: var(--color-black-50);
    padding: 4rem 0;
  }
  
  .alt-service-card {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
    border-radius: 1.5rem;
    padding: 3rem;
    position: relative;
    overflow: hidden;
  }
  
  @media (min-width: 768px) {
    .alt-service-card {
      grid-template-columns: 1fr auto;
      align-items: center;
    }
  }
  
  .alt-service-card::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 50%;
    height: 200%;
    background: radial-gradient(ellipse, rgba(255,255,255,0.1) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .alt-service-content {
    position: relative;
    z-index: 1;
  }
  
  .alt-service-label {
    display: inline-block;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.75rem;
  }
  
  .alt-service-title {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
  }
  
  .alt-service-description {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    max-width: 500px;
  }
  
  .btn-outline-white {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    color: white;
    border: 2px solid white;
    border-radius: 8px;
    font-family: var(--font-heading);
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .btn-outline-white:hover {
    background: white;
    color: var(--color-primary-700);
  }
  
  .alt-service-badge {
    background: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
    padding: 1.5rem 2rem;
    border-radius: 1rem;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    z-index: 1;
  }
  
