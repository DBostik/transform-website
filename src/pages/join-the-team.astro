---
/**
 * Transform Personal Training - Join the Team Page
 * 
 * Careers page for potential trainers to apply.
 */

import Button from '../components/ui/Button.astro';
import FormInput from '../components/ui/FormInput.astro';
import FormTextarea from '../components/ui/FormTextarea.astro';
import Navigation from '../components/Navigation.astro';
import PopupForm from '../components/PopupForm.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Join the Team - Transform Personal Training";
const pageDescription = "Become a personal trainer at Chicago's premier fitness studio. We are looking for passionate, certified trainers to join our team.";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription}>
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Montserrat:wght@600;700;800&display=swap" rel="stylesheet">
  
  <!-- Design System Styles -->
  <link rel="stylesheet" href="/src/styles/design-tokens.css">
  <link rel="stylesheet" href="/src/styles/components.css">
</head>

<body>
  <!-- ===== NAVIGATION ===== -->
  <Navigation currentPath="/join-the-team" />
  
  <!-- ===== HERO SECTION ===== -->
  <section class="career-hero">
    <div class="career-hero__content container">
      <span class="career-hero__badge">Careers</span>
      <h1 class="career-hero__title">JOIN OUR TEAM</h1>
      <p class="career-hero__subtitle">
        Are you a passionate, certified personal trainer looking to make a real impact? 
        We're always looking for talent to join the Transform family.
      </p>
    </div>
  </section>

  <!-- ===== CONTENT SECTION ===== -->
  <section class="section">
    <div class="container">
      <div class="content-grid">
        
        <!-- Details Column -->
        <div class="details-col">
          <h2 class="section-title">Why Transform?</h2>
          <p class="mb-6 text-lg">
            At Transform Personal Training, we're not just a gym ‚Äì we're a community dedicated to changing lives. We offer a supportive environment where you can grow your career, learn from experienced mentors, and help clients achieve lasting results.
          </p>
          
          <div class="benefits-grid">
            <div class="benefit-card">
              <div class="benefit-icon">üéì</div>
              <h3>Mentorship</h3>
              <p>Learn from industry veterans and grow your skills.</p>
            </div>
            <div class="benefit-card">
              <div class="benefit-icon">üí∞</div>
              <h3>Competitive Pay</h3>
              <p>Earn what you're worth with our competitive compensation structure.</p>
            </div>
            <div class="benefit-card">
              <div class="benefit-icon">üè†</div>
              <h3>Private Studio</h3>
              <p>Train in a high-end, private facility in Lakeview.</p>
            </div>
          </div>
          
          <h3 class="subsection-title mt-8">What We Look For:</h3>
          <ul class="requirements-list">
            <li>Nationally recognized Personal Training Certification (NASM, ACE, ACSM, ISSA, etc.)</li>
            <li>CPR/AED Certification</li>
            <li>Passion for helping others achieve their fitness goals</li>
            <li>Strong communication and interpersonal skills</li>
            <li>Reliability, professionalism, and a positive attitude</li>
          </ul>
        </div>
        
        <!-- Application Form -->
        <div class="form-col">
          <div class="form-wrapper">
            <h3 class="form-title">Apply Now</h3>
            <p class="form-subtitle">Fill out the form below to start the conversation.</p>
            
            <form class="application-form">
              <FormInput
                label="Full Name"
                name="name"
                type="text"
                placeholder="Jane Smith"
                required={true}
              />
              
              <FormInput
                label="Email Address"
                name="email"
                type="email"
                placeholder="jane@example.com"
                required={true}
              />
              
              <FormInput
                label="Phone Number"
                name="phone"
                type="tel"
                placeholder="(312) 555-0123"
                required={true}
              />
              
              <FormTextarea
                label="Why do you want to join Transform?"
                name="cover_letter"
                placeholder="Tell us a bit about yourself and your experience..."
                rows={5}
                required={true}
              />
              
              <FormInput
                label="LinkedIn Profile (Optional)"
                name="linkedin"
                type="url"
                placeholder="https://linkedin.com/in/janesmith"
              />
              
              <Button variant="primary" type="submit" class="w-full mt-4">
                Submit Application
              </Button>
            </form>
          </div>
        </div>
        
      </div>
    </div>
  </section>

  <!-- ===== FOOTER ===== -->
  <Footer />

  <PopupForm />
</body>
</html>

<style>
  /* ===== HERO SECTION ===== */
  .career-hero {
    background: linear-gradient(135deg, #0284c7 0%, #1e293b 100%);
    padding: var(--space-16) 0;
    position: relative;
    overflow: hidden;
  }
  
  .career-hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 60%;
    height: 200%;
    background: radial-gradient(ellipse, rgba(255,255,255,0.05) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .career-hero__content {
    text-align: center;
    position: relative;
    z-index: 1;
  }
  
  .career-hero__badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .career-hero__title {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    color: var(--color-accent-500);
    margin-bottom: 1.5rem;
    line-height: 1.1;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }
  
  .career-hero__subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.95);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.7;
  }
  
  /* ===== CONTENT SECTION ===== */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
  }
  
  @media (min-width: 1024px) {
    .content-grid {
      grid-template-columns: 1.5fr 1fr;
    }
  }
  
  .section-title {
    font-family: var(--font-heading);
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--color-primary-900);
    margin-bottom: 1.5rem;
  }
  
  .subsection-title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary-800);
    margin-bottom: 1rem;
  }
  
  .mb-6 { margin-bottom: 1.5rem; }
  .mt-4 { margin-top: 1rem; }
  .mt-8 { margin-top: 2rem; }
  .text-lg { font-size: 1.125rem; line-height: 1.7; color: var(--color-black-700); }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }
  
  .benefit-card {
    background: var(--color-primary-50);
    padding: 1.5rem;
    border-radius: 1rem;
    text-align: center;
  }
  
  .benefit-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .benefit-card h3 {
    font-family: var(--font-heading);
    font-weight: 700;
    color: var(--color-primary-900);
    margin-bottom: 0.5rem;
  }
  
  .benefit-card p {
    font-size: 0.9rem;
    color: var(--color-black-700);
    line-height: 1.5;
  }
  
  .requirements-list {
    list-style: none;
    padding: 0;
  }
  
  .requirements-list li {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-black-700);
    line-height: 1.6;
  }
  
  .requirements-list li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--color-accent-600);
    font-weight: 700;
  }
  
  /* Form Styles */
  .form-wrapper {
    background: white;
    padding: 2rem;
    border-radius: 1.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--color-black-100);
    position: sticky;
    top: 6rem;
  }
  
  .form-title {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-primary-900);
    margin-bottom: 0.5rem;
  }
  
  .form-subtitle {
    color: var(--color-black-600);
    margin-bottom: 1.5rem;
  }
  
  .w-full { width: 100%; }
</style>
