---
/**
 * Pricing Card Component
 * 
 * Displays a service pricing tier with multiple frequency options
 */

interface PricingTier {
  frequency: string;
  price: string;
}

interface Props {
  title: string;
  icon: string;
  tiers: PricingTier[];
  features: string[];
  badge?: string;
  highlighted?: boolean;
}

const { title, icon, tiers, features, badge, highlighted = false } = Astro.props;
---

<div class={`pricing-card ${highlighted ? 'highlighted' : ''}`}>
  {badge && <div class="badge">{badge}</div>}
  
  <div class="card-header">
    <div class="icon">{icon}</div>
    <h3 class="card-title">{title}</h3>
  </div>
  
  <div class="pricing-tiers">
    {tiers.map(tier => (
      <div class="pricing-tier">
        <span class="pricing-frequency">{tier.frequency}</span>
        <span class="pricing-price">{tier.price}</span>
      </div>
    ))}
  </div>
  
  <ul class="pricing-features">
    {features.map(feature => (
      <li>{feature}</li>
    ))}
  </ul>
</div>

<style>
  .pricing-card {
    position: relative;
    background: white;
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    border: 2px solid transparent;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  
  .pricing-card.highlighted {
    border-color: var(--color-primary);
    box-shadow: 0 8px 24px rgba(14, 165, 233, 0.15);
  }
  
  .pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
  }
  
  .pricing-card.highlighted:hover {
    box-shadow: 0 12px 32px rgba(14, 165, 233, 0.25);
  }
  
  .badge {
    position: absolute;
    top: 32px;
    right: -28px;
    background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
    color: white;
    padding: 10px 48px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 12px rgba(249, 115, 22, 0.4);
    transform: rotate(45deg);
    z-index: 10;
  }

  .pricing-icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto var(--space-6);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary-400), var(--color-primary-500));
    border-radius: var(--radius-lg);
    color: white;
    font-size: 2rem;
  }


  .card-header {
    text-align: center;
    margin-bottom: var(--space-6);
  }

  .icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-secondary);
    margin-bottom: var(--space-6);
  }

  .pricing-tiers {
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-6);
    border-bottom: 2px solid var(--color-gray-100);
    text-align: center;
  }
  
  .pricing-tier {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-2) 0;
  }
  
  .pricing-frequency {
    font-size: 0.9375rem;
    color: var(--color-gray-600);
  }
  
  .pricing-price {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-primary);
  }
  
  .pricing-features {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: center;
  }
  
  .pricing-features li {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-2) 0;
    font-size: 0.9375rem;
    color: var(--color-gray-700);
  }

  .tier {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3) 0;
  }

  .tier-frequency {
    font-size: 0.9375rem;
    color: var(--color-gray-600);
  }

  .tier-price {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .features-list {
    list-style: none;
    padding: 0;
    margin: 0;
    flex-grow: 1;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    padding: var(--space-2) 0;
    font-size: 0.9375rem;
    color: var(--color-gray-700);
  }

  .feature-icon {
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 2px;
  }


  .pricing-features li::before {
    content: 'âœ“';
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
    background-color: var(--color-primary-100);
    color: var(--color-primary-600);
    border-radius: 50%;
    font-weight: var(--font-weight-bold);
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .pricing-card {
      padding: var(--space-6);
    }

    .pricing-title {
      font-size: 1.25rem;
    }

    .pricing-price {
      font-size: 1rem;
    }
  }
</style>
